<body>

  <!-- Logo -->
  <img src="logo.png" alt="Logo Vente Automobile" />

  <h1>Bienvenue sur Vente Automobile</h1>

  <!-- Bouton paiement -->
  <button onclick="payer()">Payer 0.001 Pi</button>

  <!-- Bouton ouvrir l’application -->
  <button onclick="ouvrirApplication()">Ouvrir l’application</button>

  <!-- Script de gestion -->
  <script>
    // Initialisation SDK Pi (testnet)
    Pi.init({ version: "2.0", sandbox: true });

    function payer() {
      Pi.createPayment(
        {
          amount: 0.001,
          memo: "Paiement test VenteAuto",
          metadata: { test: "venteauto" }
        },
        {
          onReadyForServerApproval: function(paymentId) {
            console.log("Paiement prêt pour l'approbation serveur", paymentId);
          },
          onReadyForServerCompletion: function(paymentId, txid) {
            console.log("Paiement prêt pour finalisation", paymentId, txid);
          },
          onCancel: function(paymentId) {
            console.log("Paiement annulé", paymentId);
          },
          onError: function(error, paymentId) {
            console.error("Erreur de paiement", error);
          }
        }
      );
    }

    function ouvrirApplication() {
      window.location.href = "https://vente-automobile-pi-final.vercel.app"; // ou toute autre URL
    }
  </script>

</body>
