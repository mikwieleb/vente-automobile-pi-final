<body>

    <!-- Logo de l'application -->
    <img src="images/logo.png" alt="Logo de Vente Automobile Pi">

    <h1>Bienvenue sur notre plateforme de vente automobile en Pi Network</h1>
    <p>Effectuez un paiement de 0.001 Pi pour accéder à l'application et profiter de nos services.</p>

    <!-- Bouton de paiement -->
    <a href="javascript:void(0)" class="button" id="payButton">Payer 0.001 Pi et ouvrir l'application</a>

    <!-- Script pour le paiement (SDK Pi Network) -->
    <script src="https://cdn.jsdelivr.net/gh/pi-network/pi-sdk@latest/pi-sdk.js"></script>
    <script>
        document.getElementById('payButton').onclick = function () {
            // Configuration du paiement
            const paymentAmount = 0.001; // Montant du paiement en Pi
            const receiverAddress = "TON_RECEIVER_ADDRESS"; // Remplace par l'adresse du destinataire (peut-être ton adresse Pi Network)
            
            // Demander un paiement
            PiSDK.requestPayment({
                amount: paymentAmount,
                to: receiverAddress,
                currency: "Pi", // Définir la devise Pi Network
                callback: function (response) {
                    // Si le paiement est confirmé
                    if (response.status === "success") {
                        alert("Paiement effectué avec succès. Bienvenue !");
                        // Rediriger vers l'application après paiement réussi
                        window.location.href = "https://ton-site.com/app"; // Remplace par l'URL de ton application
                    } else {
                        alert("Échec du paiement. Veuillez réessayer.");
                    }
                }
            });
        };
    </script>

